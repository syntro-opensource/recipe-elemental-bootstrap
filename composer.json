{
    "name": "syntro/recipe-elemental-bootstrap",
    "description": "Recipe to install basic elemental components for pages using the bootstrap framework",
    "type": "silverstripe-recipe",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Matthias Leutenegger",
            "email": "hello@syntro.ch"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "silverstripe/recipe-plugin": "^1",
        "dnadesign/silverstripe-elemental": "^4",
        "gorriecoe/silverstripe-link": "^1.3",
        "gorriecoe/silverstripe-linkfield": "^1.0",
        "syntro/silverstripe-elemental-baseitem": "1.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "sminnee/phpunit-mock-objects": "^3.4.5"
    },
    "extra": {
        "project-files": [
            "app/_config/elemental.yml",
            "app/src/*",
            "app/templates/*"
        ]
    }
}

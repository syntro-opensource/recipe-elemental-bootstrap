<% if Size == 'small' %><div class="my-2 col-12 col-sm-6 col-lg-4" >
<% else_if Size == 'medium' %><div class="my-2 col-12 col-md-6" >
<% else_if Size == 'large' %><div class="my-2 col-12 col-lg-8" >
<% else_if Size == 'huge' %><div class="my-2 col-12" >
<% else_if Size == 'xsmall' %><div class="my-2 col-6 col-sm-5 col-md-4 col-lg-3" >
<% else %><div class="my-2 col" ><% end_if %>
